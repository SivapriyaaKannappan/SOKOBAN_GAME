<Window x:Class="SOKOBAN_ASSESSMENT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SOKOBAN_ASSESSMENT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF3DF55"/>
                <GradientStop Color="#FFFFF4AB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="MEDbtn" Content="MEDIUM" HorizontalAlignment="Center" Margin="0,261,0,0" VerticalAlignment="Top" Width="200" Height="43" Click="MEDbtn_Click" FontFamily="Goudy Stout" Background="#FFE68888" Foreground="#FF750000" BorderBrush="#FF750000"/>
        <Button x:Name="HRDbtn" Content="HARD" HorizontalAlignment="Center" Margin="0,321,0,0" VerticalAlignment="Top" Width="200" Height="43" Click="HRDbtn_Click" FontFamily="Goudy Stout" Background="#FFD44D4D" BorderBrush="#FF750000" Foreground="#FF750000"/>
        <Button x:Name="EZbtn" Content="EASY" HorizontalAlignment="Center" Margin="0,191,0,0" VerticalAlignment="Top" Width="200" Height="43" Click="EZbtn_Click" FontFamily="Goudy Stout" Background="#FFFFBABA" BorderBrush="#FF750000" Foreground="#FF750000"/>
        <Button x:Name="QUITbtn" Content="QUIT" HorizontalAlignment="Center" Margin="0,383,0,0" VerticalAlignment="Top" Width="78" Click="QUITbtn_Click" FontFamily="Goudy Stout" Foreground="#FF750000" BorderBrush="#FF750000"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" Text="SOKOBAN" VerticalAlignment="Top" FontSize="36" FontFamily="Goudy Stout" Foreground="#FFD44D4D" TextDecorations="Underline"/>
        <Rectangle HorizontalAlignment="Left" Height="118" Margin="-27,-44,0,0" Stroke="#FF750004" VerticalAlignment="Top" Width="130" RenderTransformOrigin="0.5,0.5" Fill="#FFD44D4D">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="31.035"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="85" Margin="92,186,0,0" Stroke="#FF750004" VerticalAlignment="Top" Width="92" RenderTransformOrigin="0.5,0.5" Fill="#FFD44D4D">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="31.035"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="61" Margin="681,104,0,0" Stroke="#FF750004" VerticalAlignment="Top" Width="62" RenderTransformOrigin="0.5,0.5" Fill="#FFD44D4D">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-32.138"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="31" Margin="630,358,0,0" Stroke="#FF750004" VerticalAlignment="Top" Width="31" RenderTransformOrigin="0.5,0.5" Fill="#FFD44D4D">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="40.688"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>

    </Grid>
</Window>
